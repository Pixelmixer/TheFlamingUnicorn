<h1>Listing errors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th>Site</th>
    <th>Priority</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @errors.each do |error| %>
  <tr>
    <td><%= error.name %></td>
    <td><%= error.content %></td>
    <td><%= error.site_id %></td>
    <td><%= error.priority %></td>
    <td><%= link_to 'Show', error %></td>
    <td><%= link_to 'Edit', edit_error_path(error) %></td>
    <td><%= link_to 'Destroy', error, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

